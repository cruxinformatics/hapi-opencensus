{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "lib",
        "paths": { "*": [ "node_modules/*", "src/types/*" ] },
        "resolveJsonModule": true,
        "sourceMap": false,
        "target": "es6"
    },
    "include": [
        "src/**/*"
    ]
}
